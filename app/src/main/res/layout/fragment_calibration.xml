<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.bamboo.demoweek1.view.fragment.CalibrationFragment">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:elevation="1dp"
        android:background="@drawable/backbutton1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        />

    <com.example.bamboo.demoweek1.view.extended.ExtendTextView
        android:id="@+id/pulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calibrating"
        android:layout_gravity="center"
        android:layout_marginBottom="150dp"
        android:textSize="40sp"
        android:textColor="@android:color/white"/>

    <com.jjoe64.graphview.GraphView
        android:layout_width="wrap_content"
        android:layout_height="200dip"
        android:id="@+id/graph2"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <com.example.bamboo.demoweek1.view.extended.ExtendTextView
        android:layout_width="wrap_content"
        android:id="@+id/pulse_view"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Pulse not found!"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:textSize="25sp"
        />


</FrameLayout>
